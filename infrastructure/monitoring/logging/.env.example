# Centralized Logging Configuration
# Copy this file to .env in each service directory and customize as needed

# Log Level (ERROR, WARN, INFO, DEBUG)
LOG_LEVEL=info

# Log Directory (relative to service root)
LOG_DIR=logs

# Enable/Disable Logstash Integration
ENABLE_LOGSTASH=true
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# Application Information
APP_VERSION=1.0.0
HOSTNAME=

# Environment
NODE_ENV=development

# Frontend/Scanner Specific
REACT_APP_API_URL=http://localhost:3001
REACT_APP_VERSION=1.0.0
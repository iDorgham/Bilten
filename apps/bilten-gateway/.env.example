# API Gateway Configuration
PORT=3000
CLUSTER_MODE=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h

# Service URLs
USER_SERVICE_URL=http://localhost:3001
EVENT_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
FILE_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Basic Rate Limiting
DEFAULT_RATE_LIMIT_WINDOW=60000
DEFAULT_RATE_LIMIT_MAX=100

# Traffic Control Configuration
TRAFFIC_CONTROL_ENABLED=true

# Global Rate Limits
GLOBAL_RATE_LIMIT_WINDOW=60000
GLOBAL_RATE_LIMIT_MAX=1000

# User Rate Limits
USER_RATE_LIMIT_WINDOW=60000
USER_RATE_LIMIT_MAX=100

# Authentication Rate Limits
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5

# Registration Rate Limits
REGISTER_RATE_LIMIT_WINDOW=3600000
REGISTER_RATE_LIMIT_MAX=3

# Payment Rate Limits
PAYMENT_RATE_LIMIT_WINDOW=60000
PAYMENT_RATE_LIMIT_MAX=10

# File Upload Rate Limits
UPLOAD_RATE_LIMIT_WINDOW=60000
UPLOAD_RATE_LIMIT_MAX=5

# Burst Protection
BURST_PROTECTION_ENABLED=true
BURST_PROTECTION_THRESHOLD=50
BURST_PROTECTION_BLOCK_DURATION=300000

# Adaptive Rate Limiting
ADAPTIVE_RATE_LIMIT_ENABLED=false
ADAPTIVE_BASE_LIMIT=100
ADAPTIVE_MAX_LIMIT=500
ADAPTIVE_ADJUSTMENT_FACTOR=0.1
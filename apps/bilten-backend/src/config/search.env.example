# Search Infrastructure Environment Variables

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_AUTH=false
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Redis Search Cache Configuration
REDIS_SEARCH_URL=redis://localhost:6379
REDIS_SEARCH_DB=2

# Search Performance Settings
SEARCH_TIMEOUT=30000
SEARCH_MAX_RESULTS=1000
AUTOCOMPLETE_MAX_SUGGESTIONS=10

# Cache TTL Settings (in seconds)
CACHE_TTL_SEARCH_RESULTS=300
CACHE_TTL_AUTOCOMPLETE=600
CACHE_TTL_TRENDING=900
CACHE_TTL_POPULAR=1800
CACHE_TTL_RECOMMENDATIONS=3600
CACHE_TTL_USER_PREFERENCES=7200
# GitHub Container Registry
# Set the owner (account/org) and repository name used for image paths
GHCR_OWNER=ghcr.io/<owner>
GHCR_REPO=<repo>

# Image tag to deploy (latest, specific git SHA, or a release tag like v1.2.3)
TAG=latest

# Backend runtime configuration
DATABASE_URL=postgresql://user:pass@db-host:5432/bilten_db
REDIS_URL=redis://redis-host:6379
JWT_SECRET=replace_with_strong_secret
CORS_ORIGIN=http://localhost:3000

# Frontend / Scanner API base URLs
REACT_APP_API_URL=http://localhost:3001/api/v1
VITE_API_URL=http://localhost:3001/api/v1

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_RETURN_URL=http://localhost:3000/payment/success

# PayPal Configuration (Future Implementation)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Payment Processing Configuration
PAYMENT_CURRENCY=usd
PAYMENT_MIN_AMOUNT=100
PAYMENT_MAX_AMOUNT=1000000
PAYMENT_FEE_PERCENTAGE=2.9
PAYMENT_FEE_FIXED=30

# Security Configuration
ENABLE_3D_SECURE=true
ENABLE_FRAUD_DETECTION=true
PAYMENT_TIMEOUT_SECONDS=300

# Email Configuration for Payment Receipts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@bilten.com


